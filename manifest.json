{
  "name": "Youtube Peek",
  "description": "Fast and easy way to peek Youtube videos with or without a sound",
  "version": "2.0",
  "permissions": [
     "tabs",
     "webRequest",
     "activeTab",
     "webRequestBlocking",
     "cookies",
     "notifications",
     "*://*/*"
  ],
  "icons": { 
    "16": "img/peeker.png",
    "48": "img/peeker.png",
    "128": "img/peeker.png" 
  },
  "content_scripts": [
    {
      "matches": ["https://*.youtube.com/*"],
      "js": ["jquery-3.2.1.min.js", "iframe_api.js" ,"payload.js"],
      "css": ["styles.css"]
    }
  ],
  "browser_action": {
    "default_title": "Youtube Peek",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["bg.js"],
    "persistent": true
  },
  "manifest_version": 2
}
